{
  "name": "twilio-helpers",
  "version": "0.1.1",
  "description": "Enhance and simplify Twilio Node library with TypeScript.",
  "main": "./lib",
  "types": "./index.d.ts",
  "files": [
    "lib",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test:typescript": "tsc --noEmit",
    "lint": "eslint src/** --ext .ts",
    "lint:fix": "eslint src/** --ext .ts --fix",
    "prepublish": "npm run build",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drummes12/twilio-helpers"
  },
  "keywords": [
    "twilio",
    "twilio-node"
  ],
  "author": "Esteban Gonz√°lez <drummes.12@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drummes12/twilio-helpers/issues"
  },
  "homepage": "https://github.com/drummes12/twilio-helpers#readme",
  "engines": {
    "node": ">=16.0"
  },
  "dependencies": {
    "joi": "17.9.2"
  },
  "peerDependencies": {
    "twilio": "^4.10.0"
  },
  "devDependencies": {
    "@twilio-labs/serverless-runtime-types": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
